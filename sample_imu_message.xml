<message>
    <header>    <!-- Information about the device -->
        <name> Wearable 1 </name>
        <id> 1234 </id>
        <timestamp> 123456789 </timestamp>
        <sub_device_id> 1 </sub_device_id>  <!-- identifies one of the following 
        1 -> IMU
        2 -> Heartbeat
        3 -> Vibrating Motor
        ... (more)
        -->
    </header>
    <command>
        <opcode> IMU </opcode> <!-- identify operation or data type, in this case, imu data -->
        <args>  
            <!-- values for x,y,z. If the device moved in x direction, the amount/speed of that, or, a boolean value saying that a rotation
            was performed by that axes.
            0 -> x
            1 -> y
            2 -> z-->
            <roll>
                1
            </roll>
            <pitch>
                0
            </pitch>
            <yaw>
                0
            </yaw>
        </args>
    </command>
</message>